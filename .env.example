# Example environment configuration
# Copy this file to .env and update values for your local/staging/production setup

# Database
DB_HOST=localhost
DB_NAME=site_db
DB_USER=site_user
DB_PASS=change_me

# Application
APP_ENV=staging
APP_DEBUG=true
APP_URL=http://localhost:8000

# Deployment
STAGING_HOST=your-staging-server.com
STAGING_USER=deploy
STAGING_SSH_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
PROD_HOST=your-production-server.com
PROD_USER=deploy
PROD_SSH_KEY=-----BEGIN OPENSSH PRIVATE KEY-----

# API Keys (example placeholders)
MAPS_API_KEY=your_maps_api_key_here
PAYMENT_API_KEY=your_payment_api_key_here
